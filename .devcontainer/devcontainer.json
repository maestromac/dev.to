{
  "name": "Forem DEVcontainer",
  "dockerComposeFile": "../docker-compose.yml",
  "service": "devcontainer",
  "runServices": ["postgres", "redis"],
  "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",
  "remoteEnv": {
    "LOCAL_WORKSPACE_FOLDER": "${localWorkspaceFolder}"
  },
  "features": {
    "ghcr.io/devcontainers/features/docker-outside-of-docker:1": {
      "version": "latest",
      "enableNonRootDocker": "false",
      "moby": "true"
    },
    "ghcr.io/devcontainers/features/common-utils:2": {
      "installZsh": "true",
      "username": "vscode",
      "userUid": "1000",
      "userGid": "1000",
      "upgradePackages": "true"
    }
  },
  "onCreateCommand": ".devcontainer/postCreateCommand-init.sh",
  "updateContentCommand": "bin/setup",
  "postAttachCommand": ".devcontainer/postAttachCommand-init.sh"
  // "remoteUser": "root"
}
